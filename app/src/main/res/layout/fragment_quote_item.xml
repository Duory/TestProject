<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/recycler_content_horizontal"
    android:paddingEnd="@dimen/recycler_content_horizontal"
    android:layout_marginTop="@dimen/recycler_content_vertical">

    <TextView
        style="@style/QuotesTextView"
        android:id="@+id/tv_quote_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/QuotesTextView"
        android:id="@+id/tv_quote_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recycler_content_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_quote_time"/>

    <TextView
        style="@style/QuotesTextView"
        android:id="@+id/tv_quote_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recycler_content_vertical"
        android:layout_marginBottom="@dimen/recycler_content_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_quote_description"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>